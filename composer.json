{
    "name": "keboola/php-docker-application",
    "license": "MIT",
    "type": "project",
    "description": "Keboola PHP docker application",
    "keywords": [
        "keboola",
        "docker",
        "application"
    ],
    "authors": [
        {
            "name": "Keboola",
            "email": "devel@keboola.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Keboola\\DockerApplication\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Keboola\\DockerApplication\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^7.1",
        "symfony/config": "^4.0",
        "symfony/filesystem": "^4.0",
        "symfony/finder": "^4.0",
        "symfony/serializer": "^4.0"
    },
    "require-dev": {
        "devedge/sami-github": "^1.0",
        "jakub-onderka/php-parallel-lint": "^0.9",
        "phpstan/phpstan-shim": "^0.9",
        "phpunit/phpunit": "^6.5",
        "slevomat/coding-standard": "^4.0",
        "squizlabs/php_codesniffer": "^3.2"
    },
    "scripts": {
        "tests": "phpunit",
        "phpstan": "phpstan analyse --no-progress --level=max src tests -c phpstan.neon",
        "phpcs": "phpcs --extensions=php src tests",
        "phpcbf": "phpcbf --extensions=php src tests",
        "phplint": "parallel-lint -j 10 --exclude vendor .",
        "build": [
            "@phplint",
            "@phpcs",
            "@phpstan",
            "@tests"
        ],
        "ci": [
            "@composer validate --no-check-all --strict",
            "@build"
        ],
        "generate-docs": [
            "sami update ./.sami-config.php"
        ]
    },
    "config": {
        "sort-packages": true
    }
}
